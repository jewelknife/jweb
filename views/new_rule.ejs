<%- include header %>

<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            创建自动回复规则
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/">首页</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">自动回复</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li><a href="#">创建自动回复规则</a></li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> 创建自动回复规则
                </div>
                <div class="tools">
                    <a href="" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" method="post" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">接受关键字</label>

                            <div class="col-md-9">
                                <input type="text" class="form-control" name="keyword" placeholder="请输入关键字..">
                                <span class="help-block">用户输入的关键字内容.</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">回复内容</label>

                            <div class="col-md-9">
                                <a href="#text-content" data-toggle="modal" class="btn blue">文字 <i
                                            class="fa fa-pencil-square"></i></a>
                                <!--<a href="#" class="btn red">图片 <i class="fa fa-pencil"></i></a>-->
                                <!--<a href="#" class="btn purple">语音 <i class="fa fa-pencil"></i></a>-->
                                <!--<a href="#" class="btn dark">视频 <i class="fa fa-pencil"></i></a>-->
                                <a class="btn yellow" data-toggle="modal" href="/picmsg_list?type=2"
                                   data-target="#ajax">图文 <i class="fa fa-picture-o"></i></a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9" id="response_show"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">规则类型</label>

                            <div class="col-md-9">
                                <div class="radio-list">
                                    <label class="radio-inline">
                                        <input type="radio" name="k_type" id="optionsRadios22" value="0"> 等于
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="k_type" id="optionsRadios23" value="1"> 包含
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">规则状态</label>

                            <div class="col-md-9">
                                <div class="radio-list">
                                    <label class="radio-inline">
                                        <input type="radio" name="status" id="optionsRadios22" value="0"> 开启
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="status" id="optionsRadios23" value="1"> 禁用
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">创建规则</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>

<%- include common/msg_choose_modal %>


<script>
    $(".text_btn_sure").on("click", function() {
        $('#response_show').html( $('textarea[name="text_content"]').val());
    });
</script>

<%- include footer %>