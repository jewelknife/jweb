<!-- text-content -->
<div class="modal fade modal_wrapper" id="text-content" tabindex="-1" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">添加回复文字</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <textarea class="form-control" rows="10" maxlength="300" name="text_content"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn blue text_btn_sure" data-dismiss="modal">确定</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- ajax -->
<div class="modal fade " id="ajax" tabindex="-1"   data-backdrop="static" role="basic"  aria-hidden="true">
    <img src="/assets/img/ajax-modal-loading.gif" alt="" class="loading">
</div>

<script>
    $(".modal").on("show.bs.modal", function() {
        // 具体css样式调整
        $(this).css({
            "display": "block",
            "margin-top": function() {
                return ($(this).height() /5);
            }
        });
    });
</script>